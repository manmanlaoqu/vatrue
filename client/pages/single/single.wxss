/*  加载更多   */
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
}
.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}
.loadMore{
  margin:0 auto;
  width:260rpx;
  padding-bottom:30rpx;
}
.loadMore image{
  width:100%;
  height:70rpx;
}
.nomore{
  text-align:center;
  padding-bottom:30rpx;
  margin-top:-20rpx;
  font-size:32rpx;
  color:rgba(97,109,134,1);
}