/* pages/myshop_list/myshop_list.wxss */
page{
  background:#F1F4F9;
}
.shop_content{
  padding:40rpx 30rpx;

}
.good{
  height:590rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx 8rpx 10rpx 0rpx rgba(53,57,74,0.08);
  padding:0 30rpx;
  padding-bottom:10rpx;
}
.good_name{
  padding:24rpx 0 27rpx;
  border-bottom:1rpx solid rgba(231,237,239,1);
}
.good_detail{
  padding:32rpx 0;
  display:flex;
  
}
.good_description{
 display:flex;
 align-items: flex-end; 
}
.good_detail image{
  width:200rpx;
  height:200rpx;
}
.good_content{
  margin-left:28rpx;
  /* padding-top:58rpx; */
}
.price_good{
  padding:30rpx 0;
  border-top:1rpx solid rgba(231,237,239,1);
  border-bottom:1rpx solid rgba(231,237,239,1);
  display: flex;
  justify-content: flex-end;
font-size:28rpx;
font-family:PingFangSC-Regular;
color:rgba(134,144,163,1);
}
.total_si{
  margin-left:56rpx;

}
.order_button{
  /* display: flex; */
  padding:32rpx 0;
}
button::after{
border: none;
}

.cancel_button{
  float:right;
  color:rgba(134,143,162,1);
}
.order_button button{
  float:right;  
  border:0;
  width:180rpx;
  height:60rpx;
border-radius:45px;
line-height: 60rpx;
font-size:28rpx;
}
.buy_again{
   background:#23CF7D; 
}

.us_img{
  width:50rpx;
height:50rpx;
border-radius:50rpx; 
}
.us_img image{
  width:100%;
  height:100%;
}
.user_name{
  height:40rpx;
font-size:28rpx;
font-family:PingFangSC-Regular;
color:rgba(134,144,163,1);
line-height:40rpx;
margin:6rpx 0 0 16rpx;
}
.order_info{
  height:40rpx;
font-size:28rpx;
font-family:PingFangSC-Regular;
color:rgba(255,171,0,1);
line-height:40rpx;
}
.detail_area{
font-size:32rpx;
font-family:PingFangSC-Regular;
color:rgba(6,25,39,1);
line-height:45rpx;
margin-bottom:12rpx;
}
.detail_num{
font-size:28rpx;
font-family:PingFangSC-Regular;
color:rgba(134,144,163,1);
line-height:40rpx;
}
.price_num{
  color:#FFAB00;
  font-size:36rpx;
  font-weight: bold;
}
.unit{
  font-weight: bold;
  color:#FFAB00;
  font-size:24rpx;
}
.flex{
  display: flex;
  justify-content: space-between;

}

.flex button{
  margin-top:20rpx;
    font-size:28rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(134,143,162,1);
background:rgba(35,207,125,1);
border-radius:45rpx;
}
.flex button:last-child{
  margin-right:0;
}