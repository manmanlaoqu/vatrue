/* pages/product_detail/product_detail.wxss */
.product_detail{
    
    list-style: none;
    font-style: normal;
    text-decoration: none;
    border: none;
    color: #333;
    font-weight: normal;
    font-family: "Microsoft Yahei";
    box-sizing: border-box;
    -webkit-tap-highlight-color: transparent;
    -webkit-font-smoothing: antialiased;

   
}
.product_detail_head{
     margin-bottom: 14rpx;
    background: #fff;
}
.head_pic{
   text-align: center;
    display: inline-block;
    margin: 0 auto;
    padding: 28rpx 0;
    color: #576b95;
}
.head_pic image{
      width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    vertical-align: middle;
    object-fit: cover;
}
.product_pic{
  border:1px solid black;
}
.product_pic image{
  width:100%;
  height:200rpx;
}
.product_name{
  font-size:32rpx;
}