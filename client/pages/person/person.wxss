/* pages/person/person.wxss */
.person_wrap{
  padding:30rpx;
  padding-right:0;
}
.person_header{
  margin-right:30rpx;
  height:385rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 12rpx 15rpx 0px rgba(219,223,230,0.45);
  border:1rpx solid rgba(241,244,249,1);
}
.person_hd{
  padding:0 36rpx 0 30rpx; 
}
.user_name{
  line-height: 136rpx;
}
.user_name{
font-size:44rpx;
font-family:PingFangSC-Medium;
color:rgba(6,25,39,1);
font-weight: bold;
}
.user_img{
 border-radius: 136rpx;
  width:136rpx;
  height:136rpx;
}
.user_img image{
 border-radius: 136rpx;
 width:100%;
 height:100%;
}
.user_area{
  display:flex;
  justify-content: space-between;
  padding:36rpx 0;
  border-bottom:1rpx solid rgba(236,241,244,1);
}
.record_num{
  display:flex;
  justify-content: space-between;
  padding:42rpx 0 46rpx;
}
.part{
  text-align: center;
}
.part view:first-child{
  height:36rpx;
font-size:36rpx;
font-family:PingFangSC-Medium;
color:rgba(6,25,39,1);
line-height:36rpx;
margin-bottom:24rpx;
}
.part view:last-child{
  height:28rpx;
font-size:28rpx;
font-family:PingFangSC-Regular;
color:rgba(141,147,155,1);
line-height:28rpx;
}
.content_part{
  border-bottom:1rpx solid rgba(239,245,246,1);
  /* border-bottom:1rpx solid rgba(230,236,241,1); */
  padding:36rpx 40rpx 36rpx 0;
  display: flex;
  justify-content: space-between;
}
.content_part:last-child{
  border:0;
}
.con_img image{
vertical-align: middle;
  width:36rpx;
  height:36rpx;
  margin-right:24rpx;
}
.con_img text{
  height:45rpx;
font-size:32rpx;
font-family:PingFangSC-Regular;
color:rgba(6,25,39,1);
line-height:45rpx;
}
.forward image{
  width:12rpx;
  height:20rpx;
}